            android:typeface="monospace" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Rehan Butt"
            android:gravity="center"
            android:textColor="#705090"
            android:textSize="15dp"
